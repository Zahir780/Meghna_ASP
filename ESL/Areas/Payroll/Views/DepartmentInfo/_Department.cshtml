<div class="modal fade" id="DepartmentInfo" data-keyboard="false" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <i class="fa fa-times windowClose" aria-hidden="true"></i>
                </button>
                <h4 class="modal-title">Department Info</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal form-bordered" autocomplete="off">
                    <input type="hidden" id="iAutoId" />

                    <input type="hidden" id="vDepartmentID" />

                    <div class="form-group">
                        <label class="col-sm-4 control-label">Department Code :</label>
                        <div class="col-sm-6">
                            <input id="vDepartmentCode" class="form-control input-sm" required/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Department Name :</label>
                        <div class="col-sm-6">
                            <input id="vDepartmentName" class="form-control input-sm" required/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Name (Bangla) :</label>
                        <div class="col-sm-6">
                            <input id="vDepartmentNameBangla" class="form-control input-sm" required/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label"><span style="color: #FF0000;">*</span>Status :</label>
                        <div class="col-sm-6">
                            <select id="iActive" data-plugin-selectTwo style="min-width:132px;" class="form-control-populate">
                                <option value="1">Active</option>
                                <option value="0">Inactive</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer customFooter">
                <div id="add">
                    <partial name="_ModalButtonCreate" />
                </div>
                <div id="edit">
                    <partial name="_ModalButtonEdit" />
                </div>
            </div>
        </div>
    </div>
</div>