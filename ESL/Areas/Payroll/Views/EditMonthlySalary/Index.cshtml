<style>
</style>

<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#" class="fa fa-caret-down"></a>
        </div>
        <h2 class="panel-title entryListHeader">Edit Monthly Salary</h2>
    </header>

    <div class="panel-body">
        <form class="form-horizontal form-bordered" autocomplete="off">
            <input type="hidden" id="autoId" />
            <div class="col-12">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="row">
                            <div class="form-group">
                                <label class="col-sm-4 control-label"><span class="text-danger">*</span>Salary of Month:</label>
                                <div class="col-sm-7" style="display: flex;">
                                    <select data-plugin-selectTwo id="pSalaryDate" class="form-control input-sm">
                                        <option value="0">==Choose a Salary Date==</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label"><span class="text-danger">*</span>Department:</label>
                                <div class="col-sm-7" style="display: flex;">
                                    <select data-plugin-selectTwo id="pDepartmentId" class="form-control input-sm">
                                        <option value="0">==Choose a Department==</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="row">
                            <div class="form-group">
                                <label class="col-sm-4 control-label"><span class="text-danger">*</span>Section:</label>
                                <div class="col-sm-7" style="display: flex;">
                                    <select data-plugin-selectTwo id="pSectionId" class="form-control input-sm">
                                        <option value="0">==Choose a Section==</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label"><span class="text-danger">*</span>Employee:</label>
                                <div class="col-sm-7" style="display: flex;">
                                    <select data-plugin-selectTwo id="pEmployeeId" class="form-control input-sm">
                                        <option value="0">==Choose a Employee==</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <table class="table table-bordered table-striped" id="tbSalary" width="100%">
                <thead>
                    <tr>
                        <th>Employee ID</th>
                        <th>Employee Code</th>
                        <th>Employee Name</th>
                        <th>Department Name</th>
                        <th>Section Name</th>
                        <th>Service Type</th>
                        <th>MD</th>
                        <th>HD</th>
                        <th>WD</th>
                        <th>LD</th>
                        <th>PD</th>
                        <th>NPD</th>
                        <th>Basic</th>
                        <th>House Rent</th>
                        <th>Medical Allowance</th>
                        <th>Gross Salary</th>
                        <th>Net Payable Salary</th>
                        <th>OT Hour</th>
                        <th>OT Rate</th>
                        <th>Friday Rate</th>
                        <th>HDP</th>
                        <th>OT Amount</th>
                        <th>Other Earning</th>
                        <th>Gross Payable</th>
                        <th>Income Tax</th>
                        <th>Other Deduction</th>
                        <th>Revenue Stamp</th>
                        <th>Advance Salary</th>
                        <th>Total Deduction</th>
                        <th>Payable Salary</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </form>
    </div>
    <footer class="panel-footer text-center">
        <partial name="_UpdateExit" />
    </footer>
</section>
@section Scripts{
    <script src="~/js/JSPayroll/EditMonthlySalaryService.js" asp-append-version="true"></script>
}