<div class="modal fade" id="DesignationInfo" data-keyboard="false" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <i class="fa fa-times windowClose" aria-hidden="true"></i>
                </button>
                <h4 class="modal-title">Designation Info</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal form-bordered" autocomplete="off">
                    <input type="hidden" id="iAutoId" />

                    <input type="hidden" id="vDesignationID" />
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Designation Code :</label>
                        <div class="col-sm-6">
                            <input id="vDesignationCode" class="form-control input-sm" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Designation Name :</label>
                        <div class="col-sm-6">
                            <input id="vDesignationName" class="form-control input-sm" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Name (Bangla) :</label>
                        <div class="col-sm-6">
                            <input id="vDesignationNameBangla" class="form-control input-sm" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Rank:</label>
                        <div class="col-sm-6" style="display: flex;">
                            <select data-plugin-selectTwo id="iRank" class="form-control input-sm">
                            </select>
                            @*<div style="line-height: 2.8; padding-left:6px;">
                                <a href="/Payroll/DesignationRankInfo" id="btnAddPrimary"><i class="fa fa-plus"></i></a>
                            </div>*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label"><span style="color: #FF0000;">*</span>Status :</label>
                        <div class="col-sm-6">
                            <select id="iActive" data-plugin-selectTwo style="min-width:132px;" class="form-control-populate">
                                <option value="1">Active</option>
                                <option value="0">Inactive</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer customFooter">
                <div id="add">
                    <partial name="_ModalButtonCreate" />
                </div>
                <div id="edit">
                    <partial name="_ModalButtonEdit" />
                </div>
            </div>
        </div>
    </div>
</div>