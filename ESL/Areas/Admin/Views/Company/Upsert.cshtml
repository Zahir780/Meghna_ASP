@model ESL.Models.Company

@{
    
    var title = "Add Company";
}

    <div class="row">
       
        <div class="col-lg-12">
            <form class="form-horizontal form-bordered" method="post">
                <section class="panel">
                    <header class="panel-heading">
                        <div class="panel-actions">
                            <a href="#" class="fa fa-caret-down"></a>
                        </div>

                        @if (Model.Id != 0)
                        {
                            //edit
                            title = "Edit Company";
                        }
                        else
                        {
                            Model.IsAuthorizedCompany = true;
                        }
                        <input asp-for="Persistance" class="form-control" type="hidden">
                        <input asp-for="Status" class="form-control" type="hidden">
                        <h2 class="panel-title">@title</h2>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </header>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Name"></label>
                            <div class="col-md-6">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>



                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="StreetAddress"></label>
                            <div class="col-md-6">
                                <textarea class="form-control" rows="3" id="textareaAutosize" data-plugin-textarea-autosize asp-for="StreetAddress"></textarea>
                                <span asp-validation-for="StreetAddress" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="PhoneNumber"></label>
                            <div class="col-md-6">
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <footer class="panel-footer">
                        @if (Model.Id != 0)
                        {
                            <partial name="_EditAndBackToListButton" model="Model.Id" />
                        }
                        else
                        {
                            <partial name="_CreateAndBackToListButton" />
                        }
                    </footer>
                </section>
                
            </form>
</div>
    </div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}